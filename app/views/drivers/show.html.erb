<h1>Driver Details</h1>

<h3><%= @driver.name %></h3>
<h3>VIN: <%= @driver.vin %></h3>
<h3>Total Revenue: $<%= @driver.total_revenue %></h3>
<h3>Average Rating: <%= @driver.average_rating %></h3>


<%= link_to("Edit", edit_driver_path(@driver.id)) %>

<%= link_to("Delete", driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"}) %>

<h2>Trips</h2>
<% @driver.trips.each do |trip| %>
  <%= link_to(trip.id, trip_path(trip)) %>
  <%= trip.date %>
  <%= link_to(trip.driver.name, driver_path(trip.driver)) %>
   <%= link_to(trip.passenger.name, passenger_path(trip.passenger)) %>
  <%= trip.cost %>
  <%= trip.rating %>
  <%= link_to("Edit", edit_trip_path(trip)) %>
  <%= link_to("Delete", trip_path(trip), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"}) %>
  <br>
<% end %>
